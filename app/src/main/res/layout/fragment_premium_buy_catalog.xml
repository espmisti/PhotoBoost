<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_3"
    tools:context=".PremiumBuyCatalogFragment">

    <Button
        android:id="@+id/c_buttonBuySearch"
        style="@android:style/Widget.Button"
        android:layout_width="283dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Оплатить"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/p_textheader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Поиски Premium"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="86dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/p_textheader4"
        app:layout_constraintStart_toStartOf="@+id/p_textheader4"
        app:layout_constraintTop_toBottomOf="@+id/p_textheader4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:background="@drawable/radiobutton_custom"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioButton11"
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/radiobutton_custom" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:background="@drawable/radiobutton_custom"
                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="423dp" />

            <RadioButton
                android:id="@+id/radioButton12"
                android:layout_width="135dp"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/radiobutton_custom" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/menu_text_subscription_button"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Продолжая, вы соглашаетесь с Условиями использования и Политикой конфиденциальности. Пожалуйста, ознакомьтесь с ними, а затем продолжите."
        android:textAlignment="center"
        android:textColor="#797979"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/c_buttonBuySearch"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/c_buttonBuySearch"
        app:layout_constraintTop_toBottomOf="@+id/c_buttonBuySearch" />


</androidx.constraintlayout.widget.ConstraintLayout>