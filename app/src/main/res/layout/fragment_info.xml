<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.main.InfoFragment">

    <TextView
        android:id="@+id/info_header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Text1"
        android:textAlignment="center"
        android:textColor="#E63244"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_header_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Text2"
        android:textAlignment="center"
        android:textColor="#E63244"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/info_header_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/info_header_1"
        app:layout_constraintTop_toBottomOf="@+id/info_main_1" />

    <TextView
        android:id="@+id/info_main_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Откройте приложение Play Маркет на устройстве Android.\n\nУбедитесь, что вы вошли в правильный аккаунт Google.\n\nНажмите на значок «Меню» → «Подписки».\n\nНайдите подписку, которую нужно отменить.\n\nНажмите «Отменить подписку», следуйте дальнейшим инструкциям. "
        android:textColor="#6D6D6D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/info_header_1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/info_header_1"
        app:layout_constraintTop_toBottomOf="@+id/info_header_1" />

    <TextView
        android:id="@+id/info_main_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Откройте приложение Play Маркет на устройстве Android.\n\nУбедитесь, что вы вошли в правильный аккаунт Google.\n\nНажмите на значок «Меню» → «Подписки».\n\nНайдите подписку, которую нужно отменить.\n\nНажмите «Отменить подписку», следуйте дальнейшим инструкциям. "
        android:textColor="#6D6D6D"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/info_header_2"
        app:layout_constraintTop_toBottomOf="@+id/info_header_2" />
</androidx.constraintlayout.widget.ConstraintLayout>