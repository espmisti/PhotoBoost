<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_first"
    tools:context=".FirstLaunch2Activity">

    <Button
        android:id="@+id/fl2_button_next2"
        style="@android:style/Widget.Button"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button"
        android:fontFamily="@font/sfpro_bold"
        android:text="Хочу попробовать!"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/fl2_text2"
        app:layout_constraintStart_toStartOf="@+id/fl2_text2"
        app:layout_constraintTop_toBottomOf="@+id/fl2_text2" />

    <TextView
        android:id="@+id/fl2_text2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="Просто загрузи фотографию и найди человека или двойника. Попробуй бесплатно!"
        android:textAlignment="center"
        android:textColor="#5266B9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/fl2_text1"
        app:layout_constraintStart_toStartOf="@+id/fl2_text1"
        app:layout_constraintTop_toBottomOf="@+id/fl2_text1" />

    <TextView
        android:id="@+id/fl2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpro_bold"
        android:text="Найди людей за секунды"
        android:textColor="#2E4085"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/fl2_imgMain"
        app:layout_constraintStart_toStartOf="@+id/fl2_imgMain"
        app:layout_constraintTop_toBottomOf="@+id/fl2_imgMain" />

    <ImageView
        android:id="@+id/fl2_imgMain"
        android:layout_width="274dp"
        android:layout_height="332dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"
        app:srcCompat="@drawable/img_firstlaunch2_main" />

    <ImageView
        android:id="@+id/fl2_buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fl2_slider1"
        app:layout_constraintEnd_toStartOf="@+id/fl2_slider1"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fl2_slider1"
        app:srcCompat="@drawable/ic_close" />

    <ImageView
        android:id="@+id/fl2_slider1"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fl2_sliderActive"
        app:layout_constraintEnd_toStartOf="@+id/fl2_sliderActive"
        app:layout_constraintTop_toTopOf="@+id/fl2_sliderActive"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/slides" />

    <ImageView
        android:id="@+id/fl2_slider2"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fl2_sliderActive"
        app:layout_constraintStart_toEndOf="@+id/fl2_sliderActive"
        app:layout_constraintTop_toTopOf="@+id/fl2_sliderActive"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/slides" />

    <ImageView
        android:id="@+id/fl2_sliderActive"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/fl2_imgMain"
        app:layout_constraintEnd_toEndOf="@+id/fl2_imgMain"
        app:layout_constraintStart_toEndOf="@+id/fl_slider1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/slides_hover" />
</androidx.constraintlayout.widget.ConstraintLayout>