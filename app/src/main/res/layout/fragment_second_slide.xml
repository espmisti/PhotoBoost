<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SecondSlideFragment">

    <TextView
        android:id="@+id/secondSlide_textMain"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Просто загрузи фотографию и найди человека или двойника. Попробуй бесплатно!"
        android:textAlignment="center"
        android:textColor="#6D6D6D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/secondSlide_textHeader"
        app:layout_constraintStart_toStartOf="@+id/secondSlide_textHeader"
        app:layout_constraintTop_toBottomOf="@+id/secondSlide_textHeader" />

    <TextView
        android:id="@+id/secondSlide_textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Найди людей за секунды"
        android:textColor="#EB4252"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/secondSlide_image"
        app:layout_constraintStart_toStartOf="@+id/secondSlide_image"
        app:layout_constraintTop_toBottomOf="@+id/secondSlide_image" />

    <ImageView
        android:id="@+id/secondSlide_image"
        android:layout_width="234dp"
        android:layout_height="278dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"
        app:srcCompat="@drawable/img_people_firstlaunch_2" />
</androidx.constraintlayout.widget.ConstraintLayout>
