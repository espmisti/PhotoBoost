<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChooseTarifActivity">

    <ImageView
        android:id="@+id/sub_firstTarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/sub_textMain"
        app:layout_constraintStart_toStartOf="@+id/sub_textMain"
        app:layout_constraintTop_toBottomOf="@+id/sub_textMain"
        app:srcCompat="@drawable/ic_firstlaunch_3_button_1" />

    <ImageView
        android:id="@+id/sub_secondTarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/sub_firstTarif"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sub_firstTarif"
        app:layout_constraintTop_toBottomOf="@+id/sub_firstTarif"
        app:srcCompat="@drawable/ic_firstlaunch_3_button_2" />

    <TextView
        android:id="@+id/sub_textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Выберите тариф"
        android:textColor="#EB4252"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sub_image"
        app:layout_constraintStart_toStartOf="@+id/sub_image"
        app:layout_constraintTop_toBottomOf="@+id/sub_image" />

    <TextView
        android:id="@+id/sub_textMain"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Отмена подписки доступна в любой момент"
        android:textAlignment="center"
        android:textColor="#6D6D6D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/sub_textHeader"
        app:layout_constraintStart_toStartOf="@+id/sub_textHeader"
        app:layout_constraintTop_toBottomOf="@+id/sub_textHeader" />

    <ImageView
        android:id="@+id/sub_image"
        android:layout_width="234dp"
        android:layout_height="278dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094"
        app:srcCompat="@drawable/img_people_firstlaunch_3" />

    <ImageView
        android:id="@+id/sub_buttonBack"
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/button_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>