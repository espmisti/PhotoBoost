<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_main"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/m_button_choose_tariff"
        style="@android:style/Widget.Button"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button"
        android:fontFamily="@font/sfpro_bold"
        android:text="Выбрать тариф"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/m_text_subscription"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/m_text_subscription"
        app:layout_constraintTop_toBottomOf="@+id/m_text_subscription" />

    <TextView
        android:id="@+id/m_text_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Подписка активна"
        android:textAlignment="center"
        android:textColor="#85D072"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/m_textheader"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/m_textheader"
        app:layout_constraintTop_toBottomOf="@+id/m_textheader" />

    <TextView
        android:id="@+id/m_textheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Профиль"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="202dp"
        android:layout_height="230dp"
        android:src="@drawable/img_people_main_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255" />

</androidx.constraintlayout.widget.ConstraintLayout>